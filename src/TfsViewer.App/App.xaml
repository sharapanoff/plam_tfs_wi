<Application x:Class="TfsViewer.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TfsViewer.App"
             xmlns:infrastructure="clr-namespace:TfsViewer.App.Infrastructure"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <infrastructure:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <infrastructure:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <tb:TaskbarIcon x:Key="TrayIcon"
                            ToolTipText="{Binding TrayTooltip}"
                            Visibility="Visible">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Restore" Command="{Binding ShowWindowCommand}"/>
                        <MenuItem Header="Refresh All" Command="{Binding RefreshCommand}"/>
                        <MenuItem Header="Hide" Command="{Binding HideWindowCommand}"/>
                        <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>
