<Window x:Class="TfsViewer.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="TFS Viewer" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding OpenSettingsCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>

    <DockPanel>
        <!-- Toolbar -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Style="{StaticResource MaterialDesignToolBar}">
                <Button Command="{Binding RefreshCommand}"
                        ToolTip="Refresh all data (F5)"
                        Style="{StaticResource MaterialDesignToolButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Separator/>

                <Button Command="{Binding OpenSettingsCommand}"
                        ToolTip="Connection settings (Ctrl+S)"
                        Style="{StaticResource MaterialDesignToolButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Separator/>

                <Button Command="{Binding OpenAboutCommand}"
                        ToolTip="About TFS Viewer"
                        Style="{StaticResource MaterialDesignToolButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="InformationOutline" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="About" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Margin="10,0,0,0">
                    <Run Text="Last refresh:"/>
                    <Run Text="{Binding LastRefreshTime, StringFormat='{}{0:HH:mm:ss}', TargetNullValue='Never'}"/>
                </TextBlock>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" 
                             Height="16"
                             IsIndeterminate="True"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content - TabControl -->
        <TabControl Margin="10" 
                    Style="{StaticResource MaterialDesignTabControl}">
            
            <!-- Work Items Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="WorkOutline" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Work Items" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                Visibility="{Binding WorkItemsTab.WorkItemCount, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="{Binding WorkItemsTab.WorkItemCount}" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Loading Indicator -->
                    <DockPanel Grid.Row="0">
                        <ProgressBar DockPanel.Dock="Left"
                                     IsIndeterminate="True"
                                     Height="4"
                                     Width="Auto"
                                     Visibility="{Binding WorkItemsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
                        <Button DockPanel.Dock="Right"
                                Content="Cancel"
                                Command="{Binding WorkItemsTab.CancelCommand}"
                                Visibility="{Binding WorkItemsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="5,0,0,0"
                                Padding="10,2"/>
                    </DockPanel>

                    <!-- Work Items DataGrid -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding WorkItemsTab.WorkItems}"
                              SelectedItem="{Binding WorkItemsTab.SelectedWorkItem}"
                              Style="{StaticResource DataGridStyle}"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              Margin="0,10,0,0">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding Id}" 
                                                Width="80"/>
                            
                            <DataGridTextColumn Header="Title" 
                                                Binding="{Binding Title}" 
                                                Width="*"/>
                            
                            <DataGridTextColumn Header="Type" 
                                                Binding="{Binding WorkItemType}" 
                                                Width="120"/>
                            
                            <DataGridTextColumn Header="State" 
                                                Binding="{Binding State}" 
                                                Width="120"/>
                            
                            <DataGridTextColumn Header="Assigned Date" 
                                                Binding="{Binding AssignedDate, StringFormat={}{0:yyyy-MM-dd}}" 
                                                Width="120"/>

                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Browser"
                                                    Command="{Binding DataContext.WorkItemsTab.OpenInBrowserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open work item in browser"
                                                    Margin="0,0,5,0"
                                                    Padding="10,4"/>
                                            
                                            <Button Content="VS"
                                                    Command="{Binding DataContext.WorkItemsTab.OpenInVisualStudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open work item in Visual Studio"
                                                    Visibility="Collapsed"
                                                    Padding="10,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <TextBlock Grid.Row="1"
                               Text="No work items assigned to you"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Gray"
                               Visibility="{Binding WorkItemsTab.WorkItemCount, Converter={StaticResource InverseBoolToVisConverter}}"/>
                </Grid>
            </TabItem>

            <!-- Pull Requests Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SourcePull" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Pull Requests" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                Visibility="{Binding PullRequestsTab.PullRequestCount, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="{Binding PullRequestsTab.PullRequestCount}" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <ProgressBar DockPanel.Dock="Left"
                                     IsIndeterminate="True"
                                     Height="4"
                                     Visibility="{Binding PullRequestsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
                        <Button DockPanel.Dock="Right"
                                Content="Cancel"
                                Command="{Binding PullRequestsTab.CancelCommand}"
                                Visibility="{Binding PullRequestsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="5,0,0,0"
                                Padding="10,2"/>
                    </DockPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding PullRequestsTab.PullRequests}"
                              SelectedItem="{Binding PullRequestsTab.SelectedPullRequest}"
                              Style="{StaticResource DataGridStyle}"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              Margin="0,10,0,0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="160"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding CreationDate, StringFormat={}{0:yyyy-MM-dd}}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>

                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Browser"
                                                    Command="{Binding DataContext.PullRequestsTab.OpenInBrowserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open pull request in browser"
                                                    Margin="0,0,5,0"
                                                    Padding="10,4"/>
                                            <Button Content="VS"
                                                    Command="{Binding DataContext.PullRequestsTab.OpenInVisualStudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open pull request in Visual Studio"
                                                    Visibility="Collapsed"
                                                    Padding="10,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="1"
                               Text="No pull requests assigned to you"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Gray"
                               Visibility="{Binding PullRequestsTab.PullRequestCount, Converter={StaticResource InverseBoolToVisConverter}}"/>
                </Grid>
            </TabItem>

            <!-- Code Reviews Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardTextOutline" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Code Reviews" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                Visibility="{Binding CodeReviewsTab.CodeReviewCount, Converter={StaticResource BoolToVisConverter}}">
                            <TextBlock Text="{Binding CodeReviewsTab.CodeReviewCount}" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <ProgressBar DockPanel.Dock="Left"
                                     IsIndeterminate="True"
                                     Height="4"
                                     Visibility="{Binding CodeReviewsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"/>
                        <Button DockPanel.Dock="Right"
                                Content="Cancel"
                                Command="{Binding CodeReviewsTab.CancelCommand}"
                                Visibility="{Binding CodeReviewsTab.IsLoading, Converter={StaticResource BoolToVisConverter}}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="5,0,0,0"
                                Padding="10,2"/>
                    </DockPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding CodeReviewsTab.CodeReviews}"
                              SelectedItem="{Binding CodeReviewsTab.SelectedCodeReview}"
                              Style="{StaticResource DataGridStyle}"
                              VirtualizingStackPanel.IsVirtualizing="True"
                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                              Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Requester" Binding="{Binding Requester}" Width="160"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding CreationDate, StringFormat={}{0:yyyy-MM-dd}}" Width="120"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>

                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Browser"
                                                    Command="{Binding DataContext.CodeReviewsTab.OpenInBrowserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open code review in browser"
                                                    Margin="0,0,5,0"
                                                    Padding="10,4"/>
                                            <Button Content="VS"
                                                    Command="{Binding DataContext.CodeReviewsTab.OpenInVisualStudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    ToolTip="Open code review in Visual Studio"
                                                    Visibility="Visible"
                                                    Padding="10,4"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Grid.Row="1"
                               Text="No code reviews assigned to you"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Gray"
                               Visibility="{Binding CodeReviewsTab.CodeReviewCount, Converter={StaticResource InverseBoolToVisConverter}}"/>
                </Grid>
            </TabItem>

        </TabControl>
    </DockPanel>
</Window>
