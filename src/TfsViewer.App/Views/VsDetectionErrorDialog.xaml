<Window x:Class="TfsViewer.App.Views.VsDetectionErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TfsViewer.App.Views"
        mc:Ignorable="d"
        Title="Visual Studio Not Detected"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon -->
        <Image Grid.Row="0"
               Source="/Resources/Icons/warning.png"
               Width="32"
               Height="32"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"
               Visibility="Collapsed"/> <!-- Icon not available -->

        <!-- Message -->
        <TextBlock Grid.Row="1"
                   Text="Visual Studio 2022 is not detected on this system.&#x0a;&#x0a;The 'Open in Visual Studio' feature will not be available. You can still open items in your browser.&#x0a;&#x0a;To enable Visual Studio integration, please ensure Visual Studio 2022 is installed and try again."
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="OK"
                    Width="80"
                    Height="30"
                    IsDefault="True"
                    Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>